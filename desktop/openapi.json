        "responses": {
          "200": {
            "description": "Chat updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatWithInteractions"
                }
              }
            }
          },
          "404": {
            "description": "Chat not found"
