          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": ["chat"],
        "operationId": "create_chat",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateChatRequest"
              }
            }
          },
          "required": true
