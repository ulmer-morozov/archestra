{
  "compilerOptions": {
    // NOTE: the following four settings were set to try and fix some typescript "errors" (alongside the ts-node settings below)
    // see https://github.com/electron/forge/issues/3317#issuecomment-1891475744
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true,

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    "types": ["vitest/globals", "vite/client"],

    /*
     Aliasing (added for shadcn/ui)
    */
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"],
      "@clients/*": ["src/clients/*"],
      "@archestra/types": ["src/types"],
      "@ui/*": ["src/ui/*"],
      // https://github.com/langchain-ai/langchainjs/issues/6462#issuecomment-2275810913
      "ollama/browser": ["./node_modules/ollama/dist"]
    }
  },
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as our --compilerOptions flag and our TS_NODE_COMPILER_OPTIONS environment variable
    // see https://github.com/electron/forge/issues/3317#issuecomment-1891475744
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
