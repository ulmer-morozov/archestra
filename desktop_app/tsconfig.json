{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    "types": ["vitest/globals"],

    /*
     Aliasing (added for shadcn/ui
    */
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"],
      "@clients/*": ["src/clients/*"],
      "@types": ["src/types"],
      "@ui/*": ["src/ui/*"]
    }
  }
}
