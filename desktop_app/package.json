    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "electron-squirrel-startup": "^1.0.1",
    "fastify": "^5.4.0",
    "get-port": "^7.1.0",
    "index.js": "link:@modelcontextprotocol/sdk/client/index.js",
    "lucide-react": "^0.536.0",
    "ollama": "^0.5.16",
    "ollama-ai-provider": "^1.2.0",
    "ollama-ai-provider-v2": "1.0.0-alpha.3",
    "prettier-plugin-sort-imports": "^1.8.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "reconnecting-websocket": "^4.4.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.9.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6",
    "undici": "^7.13.0",
    "utf-8-validate": "^6.0.5",
    "ws": "^8.18.3",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6",
    "zustand": "^5.0.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "better-sqlite3"
    ],
    "ignoredBuiltDependencies": [
      "@tailwindcss/oxide",
      "electron-winstaller",
      "esbuild"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
